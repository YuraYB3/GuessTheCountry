<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuessTheCountry.MainPage"
             BackgroundColor="#E8D58C"
             NavigationPage.HasNavigationBar="False"
             >

 
    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Frame BackgroundColor="Black" HeightRequest="30">
            
        </Frame>
        <StackLayout Orientation="Horizontal" Padding="10" VerticalOptions ="Start">
        </StackLayout>
        <StackLayout Orientation="Horizontal" Padding="45" VerticalOptions ="CenterAndExpand">
            <Label Text="GUESS&#x0a;THE COUNTRY" HorizontalOptions="CenterAndExpand" TextColor="#212121" FontSize="46"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" VerticalOptions="End" Padding="20" >
            <Button Text="Start"  CornerRadius="90" Clicked="NavigateTo" BackgroundColor="#212121" BorderColor="#2DCDDF" HorizontalOptions="CenterAndExpand" WidthRequest="220"></Button>
        </StackLayout>


    </StackLayout>


</ContentPage>
